<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="PrimaryColor">#FF007ACC</Color>
    <Color x:Key="BlueColor">#2196F3</Color>
    <Color x:Key="DarkBlueColor">#3892E3</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource BlueColor}"/>
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlueColor}"/>

    <!-- Collapse/Expand CheckBox Style -->
    <Style x:Key="CustomToggleSwitch1" TargetType="CheckBox">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Border Background="Transparent" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Icon Container with Circle Background -->
                            <Border x:Name="IconBorder"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="{StaticResource PrimaryBrush}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" 
                                                      BlurRadius="6" 
                                                      Opacity="0.3"
                                                      Color="#000000"/>
                                </Border.Effect>

                                <!-- Chevron Down Icon -->
                                <Path x:Name="ChevronIcon"
                                      Data="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
                                      Fill="White"
                                      Stretch="Uniform"
                                      Width="16"
                                      Height="16"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform>
                                        <RotateTransform x:Name="ChevronRotation" Angle="0"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Border>

                            <!-- Label Text -->
                            <TextBlock x:Name="LabelText"
                                       Text="More Options"
                                       VerticalAlignment="Center"
                                       FontFamily="Bahnschrift"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="#333333"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Checked State - Rotate to Up -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Rotate Chevron 180 degrees -->
                                        <DoubleAnimation Storyboard.TargetName="ChevronRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="180"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Change background color -->
                                        <ColorAnimation Storyboard.TargetName="IconBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#3892E3"
                                                        Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Rotate back -->
                                        <DoubleAnimation Storyboard.TargetName="ChevronRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         To="0"
                                                         Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Change back color -->
                                        <ColorAnimation Storyboard.TargetName="IconBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#FF007ACC"
                                                        Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Hover Effect -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="IconBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#2196F3"
                                                        Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="IconBorder"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1.1"
                                                         Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="IconBorder"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1.1"
                                                         Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IconBorder"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1"
                                                         Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="IconBorder"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1"
                                                         Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="IconBorder" Property="Opacity" Value="0.5"/>
                            <Setter TargetName="LabelText" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>