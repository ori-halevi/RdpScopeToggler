<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="PrimaryColor">#FF007ACC</Color>
    <Color x:Key="AccentColor">#FF5C5C5C</Color>
    
    <Color x:Key="BackgroundColor">#f7fafc</Color>

    <Color x:Key="GreenColor">#059668</Color>
    <Color x:Key="RedColor">#f04343</Color>
    <Color x:Key="BlueColor">#2196F3</Color>
    <Color x:Key="OrangeColor">#d97707</Color>
    <Color x:Key="GrayColor">#93a2b8</Color>
    <Color x:Key="PurpleColor">#9234eb</Color>

    <Color x:Key="MediumGrayColor">#e2e2e2</Color>

    <Color x:Key="LightGreenColor">#ebfcf4</Color>
    <Color x:Key="LightRedColor">#fff2f2</Color>
    <Color x:Key="LightBlueColor">#D8EAF8</Color>
    <Color x:Key="LightOrangeColor">#fffbeb</Color>
    <Color x:Key="LightGrayColor">#f7fafc</Color>
    <Color x:Key="LightPurpleColor">#faf5ff</Color>

    <Color x:Key="DarkGreenColor">#047857</Color>
    <Color x:Key="DarkRedColor">#ba1c1c</Color>
    <Color x:Key="DarkBlueColor">#3892E3</Color>
    <Color x:Key="DarkOrangeColor">#d97707</Color>
    <Color x:Key="DarkGrayColor">#475569</Color>
    <Color x:Key="DarkPurpleColor">#9234eb</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />

    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}" />
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource RedColor}" />
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource BlueColor}" />
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource OrangeColor}" />
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource GrayColor}" />
    <SolidColorBrush x:Key="PurpleBrush" Color="{StaticResource PurpleColor}" />

    <SolidColorBrush x:Key="MediumGrayBrush" Color="{StaticResource MediumGrayColor}" />

    <SolidColorBrush x:Key="LightGreenBrush" Color="{StaticResource LightGreenColor}" />
    <SolidColorBrush x:Key="LightRedBrush" Color="{StaticResource LightRedColor}" />
    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlueColor}" />
    <SolidColorBrush x:Key="LightOrangeBrush" Color="{StaticResource LightOrangeColor}" />
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGrayColor}" />
    <SolidColorBrush x:Key="LightPurpleBrush" Color="{StaticResource LightPurpleColor}" />

    <SolidColorBrush x:Key="DarkGreenBrush" Color="{StaticResource DarkGreenColor}" />
    <SolidColorBrush x:Key="DarkRedBrush" Color="{StaticResource DarkRedColor}" />
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlueColor}" />
    <SolidColorBrush x:Key="DarkOrangeBrush" Color="{StaticResource DarkOrangeColor}" />
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGrayColor}" />
    <SolidColorBrush x:Key="DarkPurpleBrush" Color="{StaticResource DarkPurpleColor}" />

</ResourceDictionary>
