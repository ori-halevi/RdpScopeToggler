<UserControl x:Class="RdpScopeToggler.Views.LocalAddressesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:converter="clr-namespace:RdpScopeToggler.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:RdpScopeToggler.Views"
             d:DesignHeight="600" d:DesignWidth="400"
             >
    <UserControl.Resources>
        <converter:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converter:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>


    <Grid>
        <Border >
            <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">

                <!-- Main Content Grid -->
                <Grid DockPanel.Dock="Top" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Title -->
                        <RowDefinition Height="*" />
                        <!-- Scrollable list -->
                        <RowDefinition Height="Auto" />
                        <!-- Buttons -->
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Text="רשתות פנימיות"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 10"
                       HorizontalAlignment="Right"
                       Grid.Row="0"/>

                    <!-- Scrollable list -->
                    <Grid Grid.Row="1" Height="280">
                        <!-- ScrollViewer -->
                        <Border HorizontalAlignment="Stretch" Margin="0" BorderThickness="0" BorderBrush="Red"
                                
                            Style="{DynamicResource MaterialDesignToolBarMainPanelBorderStyle}"
                                Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <ScrollViewer
                              Margin="0 0 0 10"
                              Padding="0 0 0 0"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              VerticalScrollBarVisibility="Visible"
                              Style="{DynamicResource MaterialDesignScrollViewer}">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" />
                                </ScrollViewer.Resources>
                                <ItemsControl ItemsSource="{Binding AlwaysOnListItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel Margin="0 5" FlowDirection="LeftToRight"
                                                VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                                >

                                                <!-- Result content -->

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="125" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Delete button -->
                                                    <Button Grid.Column="0"
                                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Style="{DynamicResource MaterialDesignFloatingActionMiniLightButton}"
                                                    CommandParameter="{Binding}"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Center"
                                                     VerticalContentAlignment="Center"
                                                    Margin="0" Padding="0"
                                                    RenderTransformOrigin="0.5,0.5"
                                                    Width="30" Height="30"
                                                            >
                                                        <Button.RenderTransform>
                                                            <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
                                                        </Button.RenderTransform>
                                                        <materialDesign:PackIcon Kind="DeleteForeverOutline" Width="20" Height="20" />
                                                    </Button>



                                                    <!-- Address -->
                                                    <Border Grid.Column="1"
                                                    BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="5 0">
                                                        <TextBox Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         TextAlignment="Center"
                                                         VerticalContentAlignment="Center"
                                                         FontSize="15"/>
                                                    </Border>
                                                    <!-- Name -->
                                                    <Border  Grid.Column="2"
                                                    BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="5 0">
                                                        <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         TextAlignment="Center"
                                                         VerticalContentAlignment="Center"
                                                         FontSize="15"/>
                                                    </Border>

                                                    <!-- On-Off button -->
                                                    <CheckBox Grid.Column="3"
                                                        Style="{DynamicResource MaterialDesignSwitchAccentToggleButton}"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Margin="10 0 0 0"
                                                        IsChecked="{Binding IsOpen, Mode=TwoWay}">
                                                        <CheckBox.LayoutTransform>
                                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                                        </CheckBox.LayoutTransform>
                                                    </CheckBox>




                                                </Grid>

                                            </DockPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        <!-- Loader -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" 
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ProgressBar Width="200" Height="20" IsIndeterminate="True" />
                            <TextBlock Text="סורק רשתות פנימיות..." Margin="0 10 0 0" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="הוסף" Command="{Binding AddItemCommand}" Margin="5" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" />
                            <Button Grid.Column="1" Content="רענן" Command="{Binding LoadLocalDevicesCommand}" Margin="5" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" />
                            <Border Grid.Column="2" CornerRadius="3" IsEnabled="{Binding IsNotSaved}">
                                <Button 
                                    Content="שמור"
                                    Command="{Binding SaveCommand}"
                                    Margin="5"
                                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                                </Button>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>

</UserControl>
