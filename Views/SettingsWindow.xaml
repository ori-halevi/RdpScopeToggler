<Window x:Class="RdpScopeToggler.Views.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
        
                Icon="pack://siteoforigin:,,,/Assets/cog.ico"
        
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                xmlns:local="clr-namespace:RdpScopeToggler.Views"
                mc:Ignorable="d"
                Title="הגדרות" Height="400" Width="500"
                WindowStartupLocation="CenterOwner"
                FlowDirection="RightToLeft"
                FontFamily="Bahnschrift"
                    >
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Text="הגדרות כלליות" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

        <!-- תוכן -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" >

            <!-- בחירת שפה -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="בחר שפה:" FontSize="16" Margin="10 0 10 20" VerticalAlignment="Center" TextAlignment="Center" />
                <ComboBox SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" 
                          FontSize="16" Height="30" VerticalAlignment="Center"
                          Style="{StaticResource MaterialDesignDataGridComboBox}">
                    <ComboBoxItem Content="עברית" />
                    <ComboBoxItem Content="English"/>
                </ComboBox>
            </StackPanel>

            <!-- עריכת רשימה לבנה -->
            <StackPanel Margin="0 20 0 0">
                <TextBlock Text="רשימת רשתות מותרות" FontSize="16" Margin="0 0 0 5"/>
                <ListBox ItemsSource="{Binding WhiteListItems}" Height="120" FontSize="14"/>
                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <TextBox Text="{Binding NewWhiteListEntry}" Width="200" FontSize="14" Margin="10 0"/>
                    <Button Content="הוסף" Command="{Binding AddWhiteListCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>
            </StackPanel>

        </StackPanel>

        <!-- כפתור סגירה -->
        <Button Grid.Row="2" Content="סגור" Width="100" Height="30" HorizontalAlignment="Center"
                Margin="0 20 0 0"
                Command="{Binding CloseCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}" />
    </Grid>
</Window>
