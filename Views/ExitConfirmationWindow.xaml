<Window x:Class="RdpScopeToggler.Views.ExitConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RdpScopeToggler.Views"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="אישור יציאה" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        FlowDirection="RightToLeft"
        Topmost="True"

        >
    <StackPanel Margin="20">
        <TextBlock Text="האם אתה בטוח שברצונך לצאת מהתוכנה?" 
                   FontSize="16" FontWeight="Bold" Margin="0 0 0 20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Width="80" Margin="10 0" Click="Yes_Click" IsDefault="True">כן</Button>
            <Button Width="80" Margin="10 0" Click="No_Click">לא</Button>
        </StackPanel>
    </StackPanel>
</Window>
