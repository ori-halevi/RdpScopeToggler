<UserControl x:Class="RdpScopeToggler.Views.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:RdpScopeToggler.Views"
             xmlns:converters="clr-namespace:RdpScopeToggler.Converters"
             mc:Ignorable="d"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <converters:ActionEnumToTranslatedStringConverter x:Key="ActionEnumToTranslatedStringConverter"/>
    </UserControl.Resources>
    <Border Margin="2.5" Background="{DynamicResource BackgroundBrush}" Padding="10"
            CornerRadius="8"
            >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!-- תוכן -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" >

                <!-- כותרת -->
                <TextBlock Text="{DynamicResource Settings_translator}"
                           FontSize="24" FontWeight="Bold"
                           Margin="0 0 0 10"
                           HorizontalAlignment="Center"
                           />

                <StackPanel HorizontalAlignment="Center">

                    <!-- בחירת שפה -->
                    <Grid Margin="0 0 0 20" FlowDirection="LeftToRight">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Language:" 
                                   FontSize="16" 
                                   VerticalAlignment="Center"
                                   Opacity="0.7"/>

                        <ComboBox Grid.Column="2"
                                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" 
                                  ItemsSource="{Binding LanguagesOptions}"
                                  FontSize="16" 
                                  MinWidth="100"
                                  Height="40"
                                  Padding="10 -10 0 0"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource MaterialDesignFilledComboBox}"/>
                    </Grid>

                </StackPanel>

                <Border BorderBrush="Gray" BorderThickness="0 1 1 0" Margin="15" />

                <StackPanel HorizontalAlignment="Center">

                    <!-- Change default access state -->
                    <Grid Margin="0 0 0 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{DynamicResource DefaultAccessState_translator}"
                                   d:Text="Default Access State:"
                                   FontSize="16" 
                                   VerticalAlignment="Center"
                                   Opacity="0.7"/>

                        <ComboBox Grid.Column="2"
                                  SelectedItem="{Binding SelectedState, Mode=TwoWay}"
                                  ItemsSource="{Binding StateOptions}"
                                  FontSize="12"
                                  MinWidth="100"
                                  Height="40"
                                  Padding="10 -10 0 0"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource MaterialDesignFilledComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource ActionEnumToTranslatedStringConverter}}"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               MaxWidth="180"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                    </Grid>

                    <!--  Open logs folder  -->
                    <Button 
                        Style="{DynamicResource SimpleButton}"
                        Content="{DynamicResource OpenLogsFolder_translator}"
                        Command="{Binding OpenLogsFolderCommand}"
                        />
                </StackPanel>

            </StackPanel>

            <!-- כפתור סגירה -->
            <Button Grid.Row="2" Content="{DynamicResource Close_translator}"
                Command="{Binding CloseCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
        </Grid>
    </Border>
</UserControl>
