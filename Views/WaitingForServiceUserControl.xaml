<UserControl x:Class="RdpScopeToggler.Views.WaitingForServiceUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"       
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"      
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" 
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar Width="200" Height="20" IsIndeterminate="True" />
            <TextBlock 
                Text="{Binding Text}"
                d:Text="Waiting for service..."
                TextAlignment="Center"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                />
            <TextBlock 
                Text="{DynamicResource DoNotCloseTheApplication_translator}"
                d:Text="Do Not Close The Application..."
                TextAlignment="Center"
                FontWeight="Bold"
                FontSize="17"
                Foreground="Red"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                />
        </StackPanel>
    </Grid>
</UserControl>
